- document_title = "#{ @diffed_version.title } | #{ t('notes.versions.full', :id => @note.id, :sequence => @diffed_version.sequence) }"
- set_meta_tags :title => document_title,
                :canonical => note_path(@note),
                :description => @diffed_version.body,
                :open_graph => { :title => @diffed_version.title },
                :noindex => true

%article
  %header
    %hgroup{ :data => {:title => document_title} }
      %h1!= Differ.diff_by_word(@diffed_version.title, @diffed_version.previous_title)
      %h2
        = link_to "#{ t('notes.item', :id => @note.id) }", note_path(@note)
        %span.version
          #{ t('notes.versions.short', :sequence => @diffed_version.sequence) } (#{ timeago_tag @diffed_version.external_updated_at })
      %h3= link_to t('notes.title'), notes_path
      %aside
        %h4#notice= notice

  != Differ.diff_by_word(@diffed_version.body, @diffed_version.previous_body)

  = render 'tags', :tags => @diffed_version.tags

  = render 'versions_list', :note => @note
