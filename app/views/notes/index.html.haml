- document_title = "#{ t('notes.title') } | #{ t('site.title') }"
- set_meta_tags :title => document_title,
                :description => '',
                :open_graph => { :title => document_title },
                :noindex => true

%section

  = render 'header', :title => t('notes.title'), :document_title => document_title 

  = render 'notes_list', :notes => @notes.first(Settings.notes.index.page_size)
