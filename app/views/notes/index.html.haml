- document_title = "#{ t('notes.title') } | #{ t('site.title') }"
- set_meta_tags :title => document_title,
                :description => '',
                :open_graph => { :title => document_title },
                :noindex => true

%nav
  %h6= t('site.breadcrumbs')
  %ul
    %li= link_to t('home.title'), root_path
    %li= t('notes.title')

%section
  %header
    %hgroup{ :data => {:title => document_title} }
      %h1= t('notes.title')
      %aside
        %h4#notice= notice

  = render 'notes_list'