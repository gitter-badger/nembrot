%nav.tags

  %header
    %h6= link_to 'Tags', tags_path

  %ul
    = list_of @tags do |tag|
      - if @added_tags.include? tag
        %ins= link_to_unless_current tag
      - elsif @removed_tags.include? tag
        %del= tag.name
      - else
        = link_to_unless_current tag.name, tag_path(tag.slug)

