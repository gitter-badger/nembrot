- document_title = "#{ t('tags.title') }"
- set_meta_tags :title => document_title,
                :description => '',
                :open_graph => { :title => document_title },
                :noindex => true

%section
  %header
    %hgroup{ :data => {:title => document_title} }
      %h1= t('tags.title')
      %aside
        %h4#notice= notice

    - if Settings.tags.cloud
      %ul.cloud
        - tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class|
          %li= link_to tag.name, tag_path(tag.slug), :class => css_class, :title => tag.count
    - else
      %ul
        = list_of @tags do |tag|
          %li= link_to "#{ tag.name } (#{ tag.count })", tag_path(tag.slug)
