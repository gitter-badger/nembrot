- document_title = "#{ t('tags.title') } | #{ t('site.title') }"
- set_meta_tags :title => document_title,
                :description => '',
                :open_graph => { :title => document_title },
                :noindex => true

%nav
  %h6= t('site.breadcrumbs')
  %ul
    %li= link_to t('home.title'), root_path
    %li= t('tags.title')

%section
  %header
    %hgroup{ :data => {:title => document_title} }
      %h1= t('tags.title')
      %aside
        %h4#notice= notice

  %ul
    - tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class|
      %li= link_to tag.name, tag_path(tag.slug), :class => css_class
