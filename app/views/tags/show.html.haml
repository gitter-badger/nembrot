- document_title = "\"#{ @tag.name }\" | Tags | joegatt.net"
- set_meta_tags :title => document_title,
                :description => '',
                :open_graph => { :title => document_title }

%section
  %header
    %hgroup{ :data => {:title => document_title} }
      %h1= @tag.name
      %h2= link_to t('tags.title'), tags_path
      %aside
        %h4#notice= notice

  = render 'notes_list'
